/* pages/home/boxDetail/boxDetail.wxss */
.headers {
  padding-left: 20rpx;
  box-sizing: border-box;
}

.headers>image {
  width: 40rpx;
  height: 40rpx;
}

.swiper {
  width: 100%;
  height: 575rpx;
}

/* .box-Image {} */

.box-Infos {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 3;
  top: -71rpx;
  border-radius: 50rpx 50rpx 0px 0px;
  overflow: hidden;
  background: #fff;
}

.box-tit {
  color: #333333;
  font-weight: 700;
  font-size: 40rpx;
  margin-top: 49rpx;
  margin-left: 5rpx;
  margin-bottom: 37rpx;
}

.box-line {
  width: 100%;
  height: 2rpx;
  background: #E1E1E1;
  margin-top: 28rpx;
}

.box-word1 {
  margin-top: 28rpx;
}

.box-word1>text:first-child {
  color: #333333;
  font-size: 24rpx;
}

.box-word1>text:last-child {
  width: 25rpx;
  height: 25rpx;
  margin-left: 7rpx;
  background: #FF9600;
  color: #FFFFFF;
  font-size: 20rpx;
  text-align: center;
  line-height: 25rpx;
}

.box-timer {
  white-space: nowrap;
  width: 100%;
  margin-top: 32rpx;
}

.box-timer-item {
  display: inline-block;
  width: 106rpx;
  height: 98rpx;
  border: 2rpx solid #D6D6D6;
  border-radius: 5rpx;
  margin-right: 14rpx;
  margin-bottom: 44rpx;
}

.box-timer-item>view {
  margin-top: 16rpx;
}

.box-timer-item view text {
  width: 100%;
  text-align: center;
  color: #999999;
  font-size: 24rpx;
}

.box-timer-item view text:first-child {
  margin-bottom: 5rpx;
}

.box-timer-item-active {
  border: 2rpx solid #FFA801 !important;
}

.box-timer-item view .text-active {
  color: #FF9600;
}

.seleteDate1 {
  width: 100%;
  padding: 0 47rpx;
  box-sizing: border-box;
  margin: 23rpx 0;
}

.sd-left>view:first-child {
  color: #333333;
  font-size: 28rpx;
}

.sd-left>view:last-child {
  color: #F9191F;
  font-size: 28rpx;
  margin-top: 31rpx;
}

.sd-right>image {
  width: 36rpx;
  height: 36rpx;
}

.bottom {
  position: fixed;
  bottom: 0;
  height: 98rpx;
  box-shadow: 0px 0px 16rpx 0px rgba(115, 115, 115, 0.35);
}

.bottom-left {
  width: 482rpx;
  height: 100%;
  padding-left: 22rpx;
  box-sizing: border-box;

}

.bottom-left>text {
  color: #333333;
  font-size: 28rpx;
}

.bottom-left>text:last-child {
  font-size: 30rpx;
  color: #FF9600 !important;
}

.bottom-right {
  height: 100%;
  width: 268rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  background: #FF9600;
  border-radius: 0 !important;
  line-height: 98rpx;
}