/* pages/mine/points/pointRecord/pointRecord.wxss */
.content {
  border-top: 2rpx solid #EEEEEE;
}

.records {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 46rpx;
}

.record-item {
  width: 100%;
  margin-bottom: 34rpx;
}

.record-item>image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 29rpx;
}

.record-item-right {
  width: 561rpx;
}

.rir01 {
  color: #333333;
  font-size: 26rpx;
}

.rir02 {
  margin-top: 19rpx;
}

.rir02>text:nth-child(1) {
  color: #999999;
  font-size: 22rpx;
}

.rir02>text:nth-child(2) {
  color: #F9191F;
  font-size: 28rpx;
}

.rir03 {
  width: 100%;
  height: 2rpx;
  background: #E8E8E8;
  margin-top: 46rpx;
}