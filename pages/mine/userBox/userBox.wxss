/* pages/mine/userBox/userBox.wxss */
.content {
  background: #f4f4f4;
  border: .5rpx solid transparent;
}

.chess-box {
  width: 710rpx;
  /* height: 244rpx; */
  padding: 38rpx 25rpx 28rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: -10rpx 1rpx 10rpx 0rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  margin: 20rpx auto 0;
}

.cb-top {
  width: 100%;
  padding: 0 5rpx;
  box-sizing: border-box;
}

.cb-top>text {
  color: #333333;
  font-size: 28rpx;
}

.chess-name {
  color: #999999;
  font-size: 26rpx;
  margin-top: 37rpx;
  margin-left: 5rpx;
}

.chess-line {
  width: 100%;
  height: 2rpx;
  background: #E3E3E3;
  margin-top: 31rpx;
}

.chess-bottom {
  width: 100%;
  margin-top: 26rpx;
  padding: 0 5rpx;
  box-sizing: border-box;
}

.chess-bottom-left>image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.chess-bottom-left>text {
  color: #333333;
  font-size: 24rpx;
}

.chess-bottom-right>view {
  color: #666666;
  font-size: 24rpx;
}

.chess-bottom-right>view:last-child {
  margin-left: 46rpx;
}