/* pages/mine/mine.wxss */
.content {
  background: #f4f4f4;
  padding: 0 30rpx;
  box-sizing: border-box;
  border: 0.5rpx solid transparent;
}

.userInfo {
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.userInfo>image {
  width: 118rpx;
  height: 118rpx;
  border-radius: 50%;
}

.userInfo-right {
  width: 515rpx;
}

.userInfo-right>image {
  width: 12rpx;
  height: 22rpx;
}

.infos>text {
  color: #3B3B3B;
  font-size: 30rpx;
}

.userPhone {
  margin-top: 19rpx;
}

.userPhone image {
  width: 19rpx;
  height: 28rpx;
  margin-right: 18rpx;
}

.userPhone text {
  color: #666666;
  font-size: 24rpx;
}

.userContent {
  width: 100%;
  margin-top: 33rpx;
}

.uc-top {
  width: 100%;
  padding: 0 75rpx;
  background: linear-gradient(93deg, #323a66 0%, #32343a 0%, #515151 100%);
  border-radius: 33rpx 33rpx 0rpx 0rpx;
  box-shadow: 0rpx 9rpx 18rpx 0px rgba(25, 25, 25, 0.2);
  height: 130rpx;
  box-sizing: border-box;
}

.ctl1 {
  margin-bottom: 22rpx;
}

.ctl1>text {
  color: #EAC687;
  font-size: 26rpx;
}

.ctl1>image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
}

.ctl2>text {
  color: #EAC687;
  font-size: 30rpx;
}

.ctl2>image {
  width: 31rpx;
  height: 31rpx;
  margin-left: 15rpx;
}

.uc-top-right {
  width: 150rpx;
  height: 54rpx;
  line-height: 54rpx;
  color: #3C445F;
  font-size: 24rpx;
  background: linear-gradient(0deg, #eac687 0%, #f8daa8 100%);
  border-radius: 11rpx;
}

.topUp {
  width: 100%;
  padding: 0 41rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 12rpx;
  margin-top: 21rpx;
  height: 98rpx;
}

.topUp .topUp-left image {
  width: 29rpx;
  height: 34rpx;
  margin-right: 25rpx;
}

.topUp .topUp-left text {
  color: #333333;
  font-size: 24rpx;
}

.topUp-right {
  width: 126rpx;
  height: 46rpx;
  border-radius: 23rpx;
  background: #FF7156;
  line-height: 46rpx;
  color: #fff;
  font-size: 24rpx;
}

.myOrder {
  width: 100%;
  padding: 33rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 20rpx;
}

.order-top>text {
  color: #333333;
  font-size: 26rpx;
}

.order-top-right>text {
  color: #999999;
  font-size: 24rpx;
}

.order-top-right>image {
  width: 10rpx;
  height: 20rpx;
  margin-left: 19rpx;
}

.myOrder-nav {
  width: 100%;
  text-align: center;
  margin-top: 51rpx;
}

.myOrder-nav-item>view {
  color: #333333;
  font-size: 24rpx;
}

.myTools {
  width: 100%;
  background: #fff;
  border: 0.5rpx solid transparent;
  margin-top: 20rpx;
  border-radius: 12rpx;
  padding-bottom: 42rpx;
  margin-bottom: 20rpx
}

.toll-tit {
  color: #333333;
  font-size: 26rpx;
  font-weight: bold;
  margin-top: 34rpx;
  margin-left: 30rpx;
}

.toolitems {
  width: 100%;
  white-space: pre-wrap;
}

.tool-item {
  width: 25%;
  text-align: center;
  margin-top: 40rpx;
}

.tool-item>view {
  color: #333333;
  font-size: 24rpx;
  margin: 13rpx auto 0;
}



.integral-box {
  width: 518rpx;
  height: 460rpx;
  position: absolute;
  top: 18%;
  left: 50%;
  transform: translateX(-50%);
}

.integral-box .integrals {
  position: absolute;
  /* z-index: 3; */
  padding: 0 43rpx 0 56rpx;
  left: 0;
  top: 0;
  box-sizing: border-box;
}

.integrals>view {
  width: 100%;
  margin-top: 57rpx;
  text-align: center;
  color: #333333;
  font-size: 30rpx;
  font-weight: bold;
}

.integrals>text {
  width: 100%;
  margin-top: 30rpx;
  color: #333333;
  font-size: 24rpx;
  white-space: pre-wrap;
  line-height: 40rpx;
}

.integral-box .close {
  width: 54rpx;
  height: 54rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -98rpx;
}