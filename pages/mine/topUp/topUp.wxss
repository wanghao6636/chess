/* pages/mine/topUp/topUp.wxss */
.moneys {
  width: 710rpx;
  height: 216rpx;
  margin: 40rpx auto 0;
  position: relative;
}

.moneys-tit,
.money {
  position: absolute;
  color: #fff;
}

.moneys-tit {
  font-size: 26rpx;
  top: 31rpx;
  left: 37rpx;
}

.money {
  font-size: 52rpx;
  width: 100%;
  text-align: center;
  top: 101rpx;
}

.czje {
  color: #333333;
  font-size: 28rpx;
  margin: 67rpx 0 0 21rpx;
}

.moneyItems {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 36rpx;
}

.money-item {
  width: 345rpx;
  height: 158rpx;
  margin-right: 20rpx;
  position: relative;
  border: 2rpx solid #A7A7A7;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.money-item:nth-child(2n) {
  margin-right: 0;
}

.money-item>image {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  right: 0;
  bottom: 0;
}

.money-item>.inline {
  text-align: center;
}

.money-item>.inline>text:nth-child(1) {
  color: #333333;
  font-size: 28rpx;
}

.money-item>.inline>text:nth-child(2) {
  color: #FF9600;
  font-size: 28rpx;
}

.money-item-active {
  border: 2rpx solid #FF5B37 !important;
  background: rgba(255, 117, 89, .2) !important;
}

.nowPayFor {
  width: 460rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #FF7559;
  color: #FFFFFF;
  font-size: 30rpx;
  border-radius: 12rpx;
  margin: 89rpx auto 0;
}

.recordss {
  position: fixed;
  bottom: 50rpx;
  width: 100vw;
  text-align: center;
  color: #888888;
  font-size: 24rpx;
  left: 0;
}